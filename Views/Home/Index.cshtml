@model IEnumerable<_1670Book.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="w-100 mt-4 d-flex flex-wrap ">
    @foreach (var product in ViewBag.Products)
    {
        <div class="card mx-3 mb-4" style="width: 11rem;">
            <img style="width:100%;height:180px" src="@product.Image" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@product.Name</h5>
                <p class="card-text">
                    <b>Price: </b>@product.Price<br/>
                    <b>Quantity: </b>@product.Quantity<br/>
                    @*<b>Desciption: </b>@product.Desciption<br/>*@
                    <b>Category: </b>@product.IdCategory<br />
                </p>
                <button type="button" onclick="add(@product.Id)" class="btn btn-primary">Add to cart</button>
            </div>
        </div>
    }
</div>
